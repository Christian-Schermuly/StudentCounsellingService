<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/background_main"
    tools:context="fra.studentcounsellingservice.MainActivity"
    android:id="@+id/mainLayout">

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:useDefaultMargins="false"
        android:columnCount="2"
        android:rowCount="2"
        android:layout_marginTop="80dp"
        android:id="@+id/buttonsGrid">


        <ImageButton
            android:layout_width="120dp"
            android:layout_height="150dp"
            android:id="@+id/schritteButton"
            android:background="@drawable/schrittebutton_high"
            android:layout_marginRight="20dp"
            android:layout_gravity="center" />

        <ImageButton
            android:layout_width="120dp"
            android:layout_height="150dp"
            android:id="@+id/interessenstestButton"
            android:background="@drawable/testappbutton_high" />

        <ImageButton
            android:layout_width="120dp"
            android:layout_height="150dp"
            android:id="@+id/studiengaengeButton"
            android:background="@drawable/studiengaengebutton_high"
            android:layout_marginTop="20dp"
         />

        <ImageButton
            android:layout_width="120dp"
            android:layout_height="150dp"
            android:id="@+id/beratungButton"
            android:background="@drawable/beratungbutton_high"
            android:layout_marginTop="20dp"
        />

    </GridLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Mach das Beste daraus!"
        android:id="@+id/headlineMain"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColor="#007bbc"
        android:layout_alignParentLeft="true"
        android:textStyle="bold"
        android:textSize="25sp"
        android:layout_marginTop="15dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Triff eine Auswahl..."
        android:id="@+id/subheadlineMain"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColor="#000000"
        android:layout_alignParentLeft="true"
        android:textStyle="bold"
        android:textSize="16sp"
        android:layout_marginTop="45dp" />

</RelativeLayout>
